{
  "name": "contentre-api",
  "version": "1.0.0",
  "main": "graphql.js",
  "scripts": {
    "start": "rollup -c -w && node --max-old-space-size=8192 dist/graphql.js",
    "build": "rollup -c --environment NODE_ENV:production",
    "dev": "rollup -c --environment NODE_ENV:development",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "review": "rm -rf node_modules/.cache && yarn && yarn prisma:update && yarn start",
    "graphql:codegen": "graphql-codegen --config codegen.yml",
    "prisma:init": "prisma migrate reset",
    "prisma:update": "prisma migrate dev",
    "docker:db": "docker-compose -f prisma/docker-compose.yml up -d",
    "docker:build": "docker build . -t contentre-api",
    "docker:run": "docker run --env-file ./.env -p 9000:9000 --name contentre-api contentre-api",
    "docker": "yarn docker:build & yarn docker:run",
    "ngrok": "ngrok http 9001 -subdomain contentre",
    "ts-node": "ts-node -P tsconfig.commonjs.json -r tsconfig-paths/register",
    "prepare": "husky install"
  },
  "repository": "https://github.com/Kaperskyguru/contentre-api",
  "license": "MIT",
  "engines": {
    "node": ">=14.x.x"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.3.1",
    "@prisma/client": "^3.6.0",
    "@rollup/plugin-alias": "^3.1.8",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-run": "^2.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^17.0.0",
    "@types/uuid": "^8.3.3",
    "apollo-server-errors": "^3.3.0",
    "apollo-server-express": "^3.5.0",
    "apollo-server-plugin-base": "^3.4.0",
    "apollo-server-plugin-http-headers": "^0.1.4",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "debug": "^4.3.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "fast-geoip": "^1.1.50",
    "graphql": "^16.2.0",
    "graphql-type-json": "^0.3.2",
    "jsonwebtoken": "^8.5.1",
    "rollup": "^2.61.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "^2.3.0",
    "@graphql-codegen/typescript": "^2.4.1",
    "@graphql-codegen/typescript-resolvers": "^2.4.2",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base-typescript-prettier": "^4.1.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "prisma": "^3.6.0",
    "typescript": "^4.5.4"
  }
}
